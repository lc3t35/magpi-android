<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory
        android:key="notifications_settings"
        android:title="@string/settings_notifications" >
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="pref_notif_newissue"
            android:summary="@string/settings_issues_desc"
            android:title="@string/settings_issues" />
    </PreferenceCategory>
    <PreferenceCategory
        android:key="about_settings"
        android:title="@string/settings_more" >
        <Preference android:title="@string/settings_visit" >
            <intent
                android:action="android.intent.action.VIEW"
                android:data="http://www.themagpi.com" />
        </Preference>
        <Preference android:title="@string/buy_visit" >
            <intent
                android:action="android.intent.action.VIEW"
                android:data="http://www.themagpi.com/buy" />
        </Preference>
    </PreferenceCategory>

</PreferenceScreen>